<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".presentation.play.PlayActivity">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hello World!"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:id="@+id/textView"/>

    <ImageView
            android:id="@+id/doge"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:scaleType="centerCrop"
            android:background="@android:color/transparent"
            android:src="@drawable/doge"/>

    <ImageView
            android:id="@+id/target_star"
            android:layout_width="5dp"
            android:layout_height="5dp"
            android:scaleType="centerCrop"
            android:src="@android:drawable/btn_star"/>

    <ImageView
            android:id="@+id/humongous_doge"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:scaleType="centerCrop"
            android:background="@android:color/black"
            android:src="@drawable/doge" android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"/>
    <Button
            android:text="Restart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/restart_button" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"/>

    <android.support.constraint.ConstraintLayout
            android:id="@+id/lauch_configuration_panel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

        <Button
                android:text="Launch"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/launch_button"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent"/>
        <TextView
                android:text="Speed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/speed_label" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toTopOf="@+id/launch_button" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"/>
        <EditText
                android:layout_width="58dp"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:ems="10"
                android:id="@+id/speed_field"
                app:layout_constraintStart_toEndOf="@+id/speed_label" android:layout_marginStart="8dp"
                android:text="2" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toTopOf="@+id/launch_button"/>
        <TextView
                android:text="times POS"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView9" app:layout_constraintStart_toEndOf="@+id/speed_field"
                android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toTopOf="@+id/launch_button"/>
        <EditText
                android:layout_width="58dp"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:ems="10"
                android:id="@+id/angle_field"
                app:layout_constraintStart_toStartOf="@+id/speed_field"
                app:layout_constraintEnd_toEndOf="@+id/speed_field" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toTopOf="@+id/speed_field"/>
        <TextView
                android:text="Angle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView10" app:layout_constraintEnd_toStartOf="@+id/angle_field"
                android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"
                app:layout_constraintBottom_toBottomOf="@+id/angle_field"/>

    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>